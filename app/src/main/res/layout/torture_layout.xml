<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/name_display"
            android:textSize = "13sp"
            android:layout_marginTop = "10sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft = "10sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/email_display"
            android:textSize = "13sp"
            android:layout_marginTop = "10sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight = "10sp"
            />


        <TextView android:id="@+id/highway"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:textColor="#4245f4"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/name_display"
            />

        <TextView android:id="@+id/model_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#4245f4"
            android:textAlignment="center"
            android:layout_marginTop="5sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/highway"
            />


        <TextView android:id="@+id/Date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Select Date"
            android:textSize="20sp"
            android:textColor="#4245f4"
            android:textStyle="bold"
            android:layout_below="@+id/model_name"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="50sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/date"
            android:focusable = "true"
            android:hint="7777777777"
            android:textColorHint="#F0F0F5"
            android:textSize="15sp"
            android:layout_toRightOf="@id/Date"
            android:layout_alignBottom="@id/Date"
            android:layout_marginLeft="60sp"
            android:background="#F0F0F5"
            android:maxLength="10"
            />


        <TextView
            android:id="@+id/Cycles_a"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Cycles A"
            android:textSize="20sp"
            android:layout_below="@+id/Date"
            android:textColor="#4245f4"
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="50sp"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/cycles_a"
            android:focusable = "true"
            android:textSize="15sp"
            android:hint="7777777777"
            android:textColorHint="#F0F0F5"
            android:layout_toRightOf="@id/Cycles_a"
            android:layout_alignBottom="@id/Cycles_a"
            android:layout_alignLeft="@id/date"
            android:background="#F0F0F5"
            android:maxLength="10"
            />


        <TextView
            android:id="@+id/Cycles_b"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Cycles B"
            android:textSize="20sp"
            android:layout_below="@+id/Cycles_a"
            android:textColor="#4245f4"
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="50sp"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/cycles_b"
            android:focusable = "true"
            android:textSize="15sp"
            android:hint="7777777777"
            android:textColorHint="#F0F0F5"
            android:layout_toRightOf="@id/Cycles_b"
            android:layout_alignBottom="@id/Cycles_b"
            android:layout_alignLeft="@id/date"
            android:background="#F0F0F5"
            android:maxLength="10"
            />



        <TextView
            android:id="@+id/Cycles_c"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Cycles C"
            android:textSize="20sp"
            android:layout_below="@+id/Cycles_b"
            android:textColor="#4245f4"
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="50sp"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/cycles_c"
            android:focusable = "true"
            android:textSize="15sp"
            android:hint="7777777777"
            android:textColorHint="#F0F0F5"
            android:layout_toRightOf="@id/Cycles_c"
            android:layout_alignBottom="@id/Cycles_c"
            android:layout_alignLeft="@id/date"
            android:background="#F0F0F5"
            android:maxLength="10"
            />




        <TextView
            android:id="@+id/Drivers_a"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Drivers A"
            android:textSize="20sp"
            android:layout_below="@+id/Cycles_c"
            android:textColor="#4245f4"
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="50sp"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/drivers_a"
            android:focusable = "true"
            android:textSize="15sp"
            android:hint="7777777777"
            android:textColorHint="#F0F0F5"
            android:layout_toRightOf="@id/Drivers_a"
            android:layout_alignBottom="@id/Drivers_a"
            android:layout_alignLeft="@id/date"
            android:background="#F0F0F5"
            android:maxLength="10"
            />


        <TextView
            android:id="@+id/Drivers_b"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Drivers B"
            android:textSize="20sp"
            android:layout_below="@+id/Drivers_a"
            android:textColor="#4245f4"
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="50sp"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/drivers_b"
            android:focusable = "true"
            android:textSize="15sp"
            android:hint="7777777777"
            android:textColorHint="#F0F0F5"
            android:layout_toRightOf="@id/Drivers_b"
            android:layout_alignBottom="@id/Drivers_b"
            android:layout_alignLeft="@id/date"
            android:background="#F0F0F5"
            android:maxLength="10"
            />



        <TextView
            android:id="@+id/Drivers_c"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Drivers C"
            android:textSize="20sp"
            android:layout_below="@+id/Drivers_b"
            android:textColor="#4245f4"
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="50sp"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/drivers_c"
            android:focusable = "true"
            android:textSize="15sp"
            android:hint="7777777777"
            android:textColorHint="#F0F0F5"
            android:layout_toRightOf="@id/Drivers_c"
            android:layout_alignBottom="@id/Drivers_c"
            android:layout_alignLeft="@id/date"
            android:background="#F0F0F5"
            android:maxLength="10"
            />



        <TextView android:id="@+id/Remarks"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Remarks (Maximum 200 characters)"
            android:textColor="#4245f4"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@+id/Drivers_c"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            />


        <EditText
            android:layout_width="300sp"
            android:layout_height = "110sp"
            android:id = "@+id/remarks"
            android:focusable = "true"
            android:maxLength="200"
            android:textSize="15sp"
            android:gravity="top|left"
            android:layout_marginTop="10sp"
            android:layout_below="@id/Remarks"
            android:background="#F0F0F5"
            android:layout_centerHorizontal="true"
            />


        <TextView android:id="@+id/Issuelog"
            android:layout_height="wrap_content"
            android:layout_width="300sp"
            android:text="Daily Issue Log (Maximum 200 characters per issue)"
            android:textAlignment="center"
            android:textColor="#4245f4"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@+id/remarks"
            android:layout_marginTop="15sp"
            android:layout_centerHorizontal="true"
            />


        <EditText
            android:layout_width="260sp"
            android:layout_height = "50sp"
            android:id = "@+id/issuelog"
            android:focusable = "true"
            android:maxLength="200"
            android:textSize="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="15sp"
            android:layout_below="@id/Issuelog"
            android:background="#F0F0F5"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/add_issue"
            android:text="Add"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="10sp"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/issuelog"
            android:layout_alignBaseline="@+id/issuelog"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container"
            android:layout_below="@+id/issuelog"
            android:orientation="vertical">
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            android:text="Update"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="50sp"
            android:textSize="20sp"
            android:layout_below="@+id/container"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            android:text="Cancel"
            android:layout_marginRight="50sp"
            android:layout_marginTop="15sp"
            android:textSize="20sp"
            android:layout_below="@+id/container"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>


</ScrollView>